<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.PersonalCollectionFragment">

    <TextView
        android:id="@+id/your_wallpapers_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Your uploads"
        android:textStyle="bold"
        android:visibility="gone" />

    <GridView
        android:id="@+id/personal_collection_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="4dp"
        android:numColumns="3"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:verticalSpacing="4dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/no_wallpaper_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_wallpaper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Add some wallpapers in your collection"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#888888"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/add_wallpaper_text"
            android:layout_centerInParent="true"
            android:src="@drawable/add_wallpaper_icon" />
    </RelativeLayout>
</LinearLayout>